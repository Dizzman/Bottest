<context>
  <input pattern="/start">
    <output value="Привет ты ведь из БК?"/> <!-- User hears this prompt -->
    
    <context> <!-- Go to the inner context to continue a conversation -->
   <input>
        <pattern value="repeat([дуся|всем] (привет|здравствуй*) [дуся])"/>

        <output>
            <item value="Привет"/>
            <item value="Привет привет"/>
            <item value="Здравствуйте"/>
        </output>
    </input>
      <input pattern="bye *"> <!-- Once the user is saying goodbye... -->
        <output value="Thank you for your call. Bye!"/>
        <context/> <!-- ...jump to the root context to hang up -->
      </input>
    </context>
  </input>
</context>
